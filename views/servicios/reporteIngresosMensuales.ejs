<% layout('index') %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte de Ingresos Mensuales Por sucursal, tipo de servicio y canal de pago</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Reporte de Ingresos Mensuales Por sucursal, tipo de servicio y canal de pago</h1>

        <form method="GET" action="/reporte/ingresosMensuales" class="card-form">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="fechaInicio" class="form-label">Fecha Inicio:</label>
                    <input type="date" name="fechaInicio" class="form-control" required>
                </div>
                <div class="col-md-3">
                    <label for="fechaFinal" class="form-label">Fecha Final:</label>
                    <input type="date" name="fechaFinal" class="form-control" required>
                </div>
                <div class="col-md-2">
                    <label for="sucursalFiltro" class="form-label">Sucursal:</label>
                    <input type="text" name="sucursalFiltro" class="form-control" placeholder="Ej: Central o % para todas" required>
                </div>
                <div class="col-md-2">
                    <label for="tipoServicioFiltro" class="form-label">Tipo de Servicio:</label>
                    <select name="tipoServicioFiltro" class="form-control" required>
                        <option value="Lavado Básico">Lavado Básico</option>
                        <option value="Lavado Premium">Lavado Premium</option>
                        <option value="Aspirado">Aspirado</option>
                        <option value="Encerado">Encerado</option>
                        <option value="%">Todos</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="canalPagoFiltro" class="form-label">Canal de Pago:</label>
                    <select name="canalPagoFiltro" class="form-control" required>
                        <option value="Efectivo">Efectivo</option>
                        <option value="Tarjeta">Tarjeta</option>
                        <option value="Transferencia">QR</option>
                        <option value="%">Todos</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary mt-2">Ver Reporte</button>
                </div>
            </div>
        </form>

        <table class="table table-custom mt-4">
            <thead>
                <tr>
                    <th>Mes</th>
                    <th>Sucursal</th>
                    <th>Tipo de Servicio</th>
                    <th>Tipo de Pago</th>
                    <th>Ingreso Total</th>
                </tr>
            </thead>
            <tbody>
                <% ingresos.forEach(i => { %>
                <tr>
                    <td><%= i.FechaPago %></td>
                    <td><%= i.Sucursal %></td>
                    <td><%= i.Servicio %></td>
                    <td><%= i.TipoPago %></td>
                    <td><%= i.Monto %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>