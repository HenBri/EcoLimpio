<% layout('index') %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte de Pagos de Reservas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Reporte de Pagos de Reservas</h1>

        <form method="GET" action="/reporte/pagosReservas" class="card-form">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="fechaInicio" class="form-label">Fecha Inicio:</label>
                    <input type="date" name="fechaInicio" class="form-control" required>
                </div>
                <div class="col-md-3">
                    <label for="fechaFinal" class="form-label">Fecha Final:</label>
                    <input type="date" name="fechaFinal" class="form-control" required>
                </div>
                <div class="col-md-3">
                    <label for="sucursalNombre" class="form-label">Sucursal:</label>
                    <input type="text" name="sucursalNombre" class="form-control" placeholder="Ej: Central o % para todas" required>
                </div>
                <div class="col-md-3">
                    <label for="clienteNombre" class="form-label">Cliente:</label>
                    <input type="text" name="clienteNombre" class="form-control" placeholder="Ej: Luis o % para todos" required>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary mt-2">Ver Reporte</button>
                </div>
            </div>
        </form>

        <table class="table table-custom mt-4">
            <thead>
                <tr>
                    <th>Fecha de Pago</th>
                    <th>Monto</th>
                    <th>Canal de Pago</th>
                    <th>Sucursal</th>
                    <th>Cliente</th>
                </tr>
            </thead>
            <tbody>
                <% pagos.forEach(p => { %>
                <tr>
                    <td><%= p.FechaHora %></td>
                    <td><%= p.MontoTotal %></td>
                    <td><%= p.TipoPago %></td>
                    <td><%= p.Sucursal %></td>
                    <td><%= p.Cliente %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>