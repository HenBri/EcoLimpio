<% layout('index') %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte de Asesores Comerciales</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Reporte de Asesores Comerciales</h1>

        <form method="GET" action="/reporte/asesor" class="card-form">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="textoFiltro" class="form-label">Buscar Asesor:</label>
                    <input type="text" name="textoFiltro" class="form-control" placeholder="Ej: LucÃ­a, Vargas o % para todos" required>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Ver Reporte</button>
                </div>
            </div>
        </form>

        <table class="table table-custom mt-4">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Paquetes Vendidos</th>
                    <th>Comisiones</th>
                </tr>
            </thead>
            <tbody>
                <% asesores.forEach(a => { %>
                <tr>
                    <td><%= a.Nombre %>    <%= a.Apellidos %></td>
                    <td><%= a.TotalPaquetesVendidos %></td>
                    <td><%= a.TotalComisiones %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>